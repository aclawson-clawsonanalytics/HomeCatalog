    <Button
        android:id="@+id/setPurchaseDateButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/purchaseDateDisplay"
        android:layout_alignBaseline="@id/purchaseDateDisplay"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="10dp"
        android:text="Set Date" />
    <TextView
        android:text="Purchase Value: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemPurchaseDateLabel"
        android:id="@+id/purchaseValueLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
    <EditText
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/purchaseValueLabel"
        android:id="@+id/purchaseValueField"
        android:layout_alignBaseline="@id/purchaseValueLabel"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:singleLine="true"
        android:textColor="@color/black" />
    <TextView
        android:text="Appraisal Date: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchaseValueLabel"
        android:id="@+id/appraisalDateLabel"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />
