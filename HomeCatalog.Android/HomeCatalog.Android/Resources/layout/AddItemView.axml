<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <TextView
        android:text="Add / Edit Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddItemLabel"
        android:textSize="15dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Item Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddItemLabel"
        android:id="@+id/itemNameLabel"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/itemNameLabel"
        android:id="@+id/itemNameField"
        android:layout_alignBaseline="@id/itemNameLabel"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:singleLine="true" />
    <TextView
        android:text="Purchase Date: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemNameLabel"
        android:id="@+id/itemPurchaseDateLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchaseDateDisplay"
        android:layout_toRightOf="@id/itemPurchaseDateLabel"
        android:layout_alignBaseline="@id/itemPurchaseDateLabel"
        android:layout_marginLeft="10dp"
        android:text="Date Goes Here" />
